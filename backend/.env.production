# Production Environment Variables for Azure App Service
# Copy these to your Azure App Service Configuration

# Database Configuration (Azure PostgreSQL)
DB_HOST=container-tracking-db-server.postgres.database.azure.com
DB_PORT=5432
DB_NAME=ContainerTrackingDB
DB_USER=your_production_user
DB_PASSWORD=your_secure_production_password
DB_SSL_MODE=Require

# JWT Security (Generate strong Base64 key)
JWT_KEY=your_production_base64_jwt_secret_here
JWT_ISSUER=ContainerTrackingAPI
JWT_AUDIENCE=ContainerTrackingClients
JWT_EXPIRY_MINUTES=30

# CORS Security (Your actual frontend domains)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging Level
ASPNETCORE_ENVIRONMENT=Production
Logging__LogLevel__Default=Warning
Logging__LogLevel__Microsoft=Warning
Logging__LogLevel__Microsoft.Hosting.Lifetime=Information

# Security Headers
ASPNETCORE_FORWARDEDHEADERS_ENABLED=true

# Performance
ASPNETCORE_URLS=https://+:443;http://+:80